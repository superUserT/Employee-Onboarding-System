    <div id="postalAddress">
    <h3>Postal Address</h3>
    <div class="mb-3">
        <label for="" class="form-label">Physical Address (street)</label>
            <input type="text" data-val="true" data-val-required="This Field Is Required" class="form-control" asp-for="postalAddressLine1">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Suburb</label>
            <input type="text" data-val="true" data-val-required="This Field Is Required" class="form-control" asp-for="postalSuburb">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Country</label>
            <input type="text" data-val="true" data-val-required="This Field Is Required" class="form-control" asp-for="postalCountry">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Postal Code</label>
            <input type="text" data-val="true" data-val-required="This Field Is Required" class="form-control" asp-for="postalCode">
