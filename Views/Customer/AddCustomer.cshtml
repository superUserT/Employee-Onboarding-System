@model technicalAssesment.Models.AddCustomerModel

@{
    ViewData["Title"] = "Add Customer";
}


<head>
    <meta charset="utf-8">
    <script src="https://code.jquery.com/jquery-3.6.3.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">
    </script>

    <script>
        $(document).ready(function() {
            $("button").click(function() {
                $(document).scrollTop($(document).height());
            });
        });
    </script>


    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>


</head>



<form method="post" action="AddCustomer" class="mt-5">

<div id="customerDetails">
<h1>Add Customer Details</h1>
    <div class="mb-3">
            <label for="" class="form-label">First Name</label>
        <input type="text"  data-val="true" data-val-required="First Name Is Required" class="form-control" asp-for="FirstName">
    </div>
    <div class="mb-3">
            <label for="" class="form-label">Last Name</label>
        <input type="text"  data-val="true" data-val-required="Last Name Is Required" class="form-control" asp-for="LastName">
    </div>
    <div class="mb-3">
            <label for="" class="form-label">Cellphone</label>
            <input type="text" data-val="true" data-val-required="Cellphone Number Is Required" class="form-control" asp-for="cellphone">
    </div>
    </div>


   
    
    <div style="text-align:right;">
        <button>Scroll Down</button>
    </div>

    <div id="customerAddress">
    <h1>Add Customer Addresses</h1>
    <div class="mb-3">
            <label for="" class="form-label">Physical Address (street)</label>
            <input type="text" data-val="true" data-val-required="This Field Is Required" class="form-control" asp-for="physicalAddressLine">
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">Suburb</label>
            <input type="text" data-val="true" data-val-required="This Field Is Required" class="form-control" asp-for="physicalSuburb">
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">Country</label>
            <input type="text" data-val="true" data-val-required="This Field Is Required" class="form-control" asp-for="physicalCountry">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Postal Code</label>
            <input type="text" data-val="true" data-val-required="This Field Is Required" class="form-control" asp-for="physicalPostalCode">
    </div>
    </div>
